FROM node:22-slim

WORKDIR /app

# Install dependencies
RUN apt-get update \
 && apt-get install -y libssl3 netcat-openbsd \
 && rm -rf /var/lib/apt/lists/*

# Copy dependencies
COPY package*.json ./
COPY .env.development ./

RUN npm install && npm install -g ts-node-dev

# Copy app source
COPY . .

# Prisma generate
ENV PRISMA_CLI_QUERY_ENGINE_TYPE=library
RUN npm run prisma:generate

EXPOSE 3000

CMD ["sh", "-c", "until nc -z db 5432; do echo 'âŒ› Waiting for db:5432...'; sleep 2; done && echo 'âœ… PostgreSQL is up. Running migration...' && npm run prisma:dev && echo 'ðŸš€ Starting NestJS...' && npm run start:dev"]

